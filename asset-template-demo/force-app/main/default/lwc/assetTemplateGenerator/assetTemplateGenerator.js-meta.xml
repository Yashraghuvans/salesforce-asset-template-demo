<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Asset Template Generator</masterLabel>
    <description>Generate multiple assets from a template</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="showDescription" type="Boolean" default="true" label="Show Description Field"/>
            <property name="cardTitle" type="String" default="Generate Assets from Template" label="Card Title"/>
        </targetConfig>
        <targetConfig targets="lightning__AppPage">
            <property name="showDescription" type="Boolean" default="true" label="Show Description Field"/>
            <property name="defaultAssetType" type="String" label="Default Asset Type"/>
            <property name="cardTitle" type="String" default="Generate Assets from Template" label="Card Title"/>
        </targetConfig>
        <targetConfig targets="lightning__HomePage">
            <property name="showDescription" type="Boolean" default="true" label="Show Description Field"/>
            <property name="defaultAssetType" type="String" label="Default Asset Type"/>
            <property name="cardTitle" type="String" default="Generate Assets from Template" label="Card Title"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>