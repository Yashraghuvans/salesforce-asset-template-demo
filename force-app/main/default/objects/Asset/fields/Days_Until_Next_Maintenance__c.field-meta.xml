<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Days_Until_Next_Maintenance__c</fullName>
    <description>Formula field calculating the number of days until the next scheduled maintenance</description>
    <externalId>false</externalId>
    <formula>IF(ISBLANK(Next_Maintenance_Date__c), NULL, Next_Maintenance_Date__c - TODAY())</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Automatically calculated based on Next Maintenance Date</inlineHelpText>
    <label>Days Until Next Maintenance</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
